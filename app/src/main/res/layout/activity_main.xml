<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/key_a"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/color_1"
        android:onClick="playA"
        android:orientation="horizontal" />

    <LinearLayout
        android:id="@+id/key_b"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/color_2"
        android:onClick="playB"
        android:orientation="horizontal" />

    <LinearLayout
        android:id="@+id/key_c"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/color_3"
        android:onClick="playC"
        android:orientation="horizontal" />

    <LinearLayout
        android:id="@+id/key_d"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/color_4"
        android:onClick="playD"
        android:orientation="horizontal" />

    <LinearLayout
        android:id="@+id/key_e"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/color_5"
        android:onClick="playE"
        android:orientation="horizontal" />

    <LinearLayout
        android:id="@+id/key_f"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/color_6"
        android:onClick="playF"
        android:orientation="horizontal" />

    <LinearLayout
        android:id="@+id/key_g"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/color_7"
        android:onClick="playG"
        android:orientation="horizontal" />

</LinearLayout>